<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox fx:id="helpMessageCard" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <stylesheets>
    <URL value="@HelpWindowCommandCard.css" />
  </stylesheets>
  <children>
    <Separator fx:id="cardSeparator" />
    <Label fx:id="commandWord" text="\$commandWord" />
    <VBox fx:id="messageUsage" spacing="5" styleClass="cell_small_label">
      <!-- TextFlow children are added dynamically for each line. -->
    </VBox>
  </children>
  <opaqueInsets>
    <Insets top="10.0" right="10.0" bottom="10.0" left="15.0" />
  </opaqueInsets>
  <padding>
    <Insets top="10.0" right="10.0" bottom="10.0" left="15.0" />
  </padding>
</VBox>
